<!-- Файл: Views/DashboardView.xaml -->
<UserControl x:Class="RepairServiceAppMVVM.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RepairServiceAppMVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1100">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="StatValue">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="StatLabel">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Обзор состояния сервиса" FontSize="24" FontWeight="Bold" Foreground="#333333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Border Grid.Row="1" Margin="0,0,0,20" Background="#F8F8F8" Padding="15" CornerRadius="8">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Margin="20,0">
                        <TextBlock Text="Всего ремонтов:" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding TotalRepairs}" Style="{StaticResource StatValue}" Foreground="#007ACC"/>
                    </StackPanel>
                    <StackPanel Margin="20,0">
                        <TextBlock Text="Всего клиентов:" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding TotalClients}" Style="{StaticResource StatValue}" Foreground="#28A745"/>
                    </StackPanel>
                    <StackPanel Margin="20,0">
                        <TextBlock Text="Всего устройств:" Style="{StaticResource StatLabel}"/>
                        <TextBlock Text="{Binding TotalDevices}" Style="{StaticResource StatValue}" Foreground="#FFC107"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="10,0" Background="#F8F8F8" Padding="15" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Ремонты по статусам" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <ItemsControl ItemsSource="{Binding RepairsByStatus}" Margin="0,0,0,10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding StatusName}" FontWeight="SemiBold"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Count, StringFormat='{} ({0} шт.)'}" Margin="10,0"/>
                                        <TextBlock Grid.Column="2" Text="{Binding TotalCost, StringFormat='{}{0:C}', ConverterCulture=ru-RU}" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Margin="10,0" Background="#F8F8F8" Padding="15" CornerRadius="8">
                    <!-- ИСПРАВЛЕНО: Используем Grid для четкого разделения -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Распределение ремонтов" FontSize="18" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                        <local:PieChartControl Grid.Row="1" Slices="{Binding PieSlices}" Width="250" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <ItemsControl Grid.Row="2" ItemsSource="{Binding PieSlices}" Margin="0,10,0,0" HorizontalAlignment="Center">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <Rectangle Width="10" Height="10" Fill="{Binding Fill}" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Title}" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>

            <Button Grid.Row="3" Content="Обновить данные" Command="{Binding LoadStatsCommand}" HorizontalAlignment="Center" Margin="0,20,0,0" Width="180" Height="40"/>
        </Grid>
    </ScrollViewer>
</UserControl>
